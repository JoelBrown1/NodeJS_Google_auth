<h1>Dashboard</h1>
<h3>Welcome {{name}}</h3>

<p>Here are your stories</p>

{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tBody>
      {{#each stories}}
      {{!-- 
        because we are in a loop,
        properties like _id are obtained from each story
      --}}
      <tr>
        <td><a href="/stories/{{_id}}">{{title}}</a></td>
        <td>{{createdAt}}</td>
        <td><span class="dash-status">{{status}}</span></td>
        <td></td>
      </tr>
      {{/each}}
    </tBody>
  </table>
{{else}}
  <p>You haven't created any stories</p>
{{/if}}